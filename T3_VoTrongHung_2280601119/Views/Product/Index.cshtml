@model IEnumerable<T3_VoTrongHung_2280601119.Models.Product>

<h2>Products</h2>

<!-- Nút Thêm Sản Phẩm -->
<a asp-action="Add" class="btn btn-primary mb-3">Thêm Sản Phẩm</a>

<!-- Nút Danh Sách Danh Mục -->
<a asp-controller="Category" asp-action="Index" class="btn btn-secondary mb-3">Danh Sách Danh Mục</a>

<table class="table"> 
    <thead> 
        <tr> 
            <th>Name</th> 
            <th>Price</th> 
            <th>Description</th> 
            <th>Category</th> 
            <th>Image</th>
            <th>Actions</th> 
        </tr> 
    </thead> 
    <tbody> 
    @foreach (var product in Model) 
    { 
        <tr> 
            <td>@product.Name</td> 
            <td>@product.Price</td> 
            <td>@product.Description</td>
            <td>@(product.Category != null ? product.Category.Name : "No Category")</td>
            <td>
                @if (product.Images != null && product.Images.Any())
                {
                    foreach (var image in product.Images)
                    {
                        <img src="@image.Url" alt="Product Image" style="max-width: 100px;" />
                    }
                }
            </td>
            <td> 
                <a asp-action="Display" asp-route-id="@product.Id">View</a> | 
                <a asp-action="Update" asp-route-id="@product.Id">Edit</a> | 
                <a asp-action="Delete" asp-route-id="@product.Id">Delete</a> 
            </td> 
        </tr> 
    } 
    </tbody> 
</table> 