@model IEnumerable<T3_VoTrongHung_2280601119.Models.Category>

<h2>Danh Sách Danh Mục</h2>

<!-- Nút Thêm Danh Mục -->
<a asp-action="Add" class="btn btn-primary mb-3">Thêm Danh Mục</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@category.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@category.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-controller="Product" asp-action="Index" class="btn btn-secondary btn-sm">Quay lại trang chủ</a>
