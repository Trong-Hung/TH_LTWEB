@model VoTrongHung2280601119.Models.Category

@{
    ViewData["Title"] = "Thêm Danh mục Mới";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        @* Sửa đổi thẻ form để tường minh hơn *@
        <form asp-action="Create" method="post">

            @* THAY ĐỔI QUAN TRỌNG NHẤT: Đổi "ModelOnly" thành "All" *@
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@* Section này dùng để nạp các script cần thiết cho validation *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}