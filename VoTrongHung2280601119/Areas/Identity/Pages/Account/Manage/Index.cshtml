@page
@model IndexModel
@{
    ViewData["Title"] = "Thông tin tài khoản";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="mb-4">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label">Tên đăng nhập</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label">Số điện thoại</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">Lưu thông tin</button>
        </form>

        <!-- ✅ Hiển thị trạng thái xác thực 2FA -->
        <div class="mt-4">
            @if (Model.IsTwoFactorEnabled)
            {
                <div class="alert alert-success d-flex align-items-center" style="font-family: 'Inter', sans-serif;">
                    <i class="bi bi-shield-lock-fill me-2"></i>
                    <span class="fw-bold">Xác thực hai bước đã được bật.</span>
                </div>
            }
            else
            {
                <div class="alert alert-success d-flex align-items-center" style="font-family: 'Inter', sans-serif;">
                    <i class="bi bi-shield-lock-fill me-2"></i>
                    <span class="fw-bold">Bạn chưa bật xác thực hai bước.</span>
                </div>
            }

            <a asp-page="./TwoFactorAuthentication" class="btn btn-outline-secondary w-100">
                <i class="bi bi-gear me-2"></i> Cấu hình xác thực hai bước
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
