@{
    // Áp dụng Layout tổng cho ứng dụng
    Layout = "/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <!-- Biểu tượng Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Fonts: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        h2, h4 {
            font-weight: 600;
        }

        .manage-layout {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .manage-nav {
            border-right: 1px solid #e0e0e0;
            padding-right: 1rem;
        }

        .manage-content {
            padding-left: 1.5rem;
        }
    </style>
}

<div class="container my-5 manage-layout">
    <h2 class="mb-4"><i class="bi bi-person-gear me-2"></i>Quản lý tài khoản của bạn</h2>
    <h5 class="mb-3 text-muted">Cập nhật cài đặt cá nhân và bảo mật</h5>
    <hr />

    <div class="row">
        <div class="col-md-3 manage-nav">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9 manage-content">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
