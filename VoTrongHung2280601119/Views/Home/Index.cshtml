@model IEnumerable<VoTrongHung2280601119.Models.Product>

@{
    ViewData["Title"] = "Trang chủ - Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Sử dụng layout chung cho Customer
}

<div class="jumbotron text-center bg-primary text-white py-5">
    <h1 class="display-4">Chào mừng đến với Hệ thống Phân phối Sản phẩm!</h1>
    <p class="lead">Tìm kiếm những sản phẩm chất lượng tốt nhất với giá cả phải chăng.</p>
</div>

<h2 class="mt-5">Sản phẩm của chúng tôi</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="max-height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text flex-grow-1">@Html.DisplayFor(modelItem => item.Description)</p>
                        <p class="card-text"><strong>Giá: @Html.DisplayFor(modelItem => item.Price) VNĐ</strong></p>
                        <p class="card-text text-muted">Tồn kho: @Html.DisplayFor(modelItem => item.Stock) @Html.DisplayFor(modelItem => item.Unit)</p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mt-auto">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">Chưa có sản phẩm nào để hiển thị.</div>
}