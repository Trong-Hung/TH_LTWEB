<div class="add-product">
    <a asp-controller="Product" asp-action="Add" class="btn btn-primary">Thêm sản phẩm</a>
</div>

<div class="product-list">
    @foreach (var product in Model)
    {
        <div class="product-card">
            <a asp-action="Display" asp-route-id="@product.Id">
                <img src="@product.ImageUrl" alt="@product.Name" />
                <h2>@product.Name</h2>
            </a>
            <p>@product.Description</p>
            <p>Giá: @product.Price ₫</p>

            <div class="actions">
                <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">Sửa</a>
                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Xóa</a>
            </div>
        </div>
    }
</div>