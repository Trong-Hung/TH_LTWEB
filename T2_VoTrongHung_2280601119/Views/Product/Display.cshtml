@model T2_VoTrongHung_2280601119.Models.Product

<h2>Product Details</h2>

<div>
    <h4>Name: @Model.Name</h4>
    <h4>Price: @Model.Price</h4>
    <h4>Description: @Model.Description</h4>

    <h2>@Model.Name</h2>
    <img src="@Model.ImageUrl" alt="Product Image" />
